<section class="login-form">
	<div class="container">
		<div class="login-form-card login-card">
			<h4 class="title">Forgot your password?</h4>

			<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  				<%= f.error_notification %>



			  <div class="form-inputs">

			    <%= f.input :email, label: false, placeholder: 'Email', required: true, autofocus: true, input_html: { class: 'login-form-input' }  %>

			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Send me instructions", class: 'cta cta-main cta-medium cta-full-width' %>
			  </div>

			<% end %>
		</div>
		<div class="login-form-links">
		<%= render "devise/shared/links" %>
		</div>
	</div>
</section>

