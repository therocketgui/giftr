<section class="login-form">
	<div class="container">
		<div class="login-form-card login-card">
			<h4 class="title">Create your Account</h4>

			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  <%= f.error_notification %>

			  <div class="form-inputs">
			    <%= f.input :first_name, label: false, placeholder: 'First Name', required: true, input_html: { class: 'login-form-input' }  %>
			    <%= f.input :last_name, label: false, placeholder: 'Last Name', required: true, input_html: { class: 'login-form-input' }  %>
			    <%= f.input :email, label: false, placeholder: 'Email', required: true, autofocus: true, input_html: { class: 'login-form-input' }  %>
			    <%= f.input :password, label: false, placeholder: 'Password', required: true, input_html: { class: 'login-form-input' }  %>
			    <%= f.input :password_confirmation, label: false, placeholder: 'Confirm Your Password', required: true, input_html: { class: 'login-form-input' }  %>

			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Sign up", class: 'cta cta-main cta-medium cta-full-width' %>
			  </div>
			<% end %>
		</div>
		<div class="login-form-links">
		<%= render "devise/shared/links" %>
		</div>
	</div>
</section>

